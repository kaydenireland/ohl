{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ohl",
  "scopeName": "source.ohl",

  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" }
  ],

  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ohl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ohl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ohl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ohl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ohl",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.ohl",
          "match": "\\b\\d+\\b"
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ohl",
          "match": "\\b(if|else|for|each|in|defer|loop|do|while|return|break|continue|repeat|default)\\b"
        },
        {
          "name": "keyword.declaration.ohl",
          "match": "\\b(public|private|protected|class|let|var|const)\\b"
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "name": "storage.type.ohl",
          "match": "\\b(int|float|boolean|string|char|null)\\b"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.ohl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },

	"operators": {
		"patterns": [

			{
			"name": "keyword.operator.increment.ohl",
			"match": "(\\+\\+|--|\\*\\*)"
			},
			{
			"name": "keyword.operator.power.ohl",
			"match": "(\\^|\\^/|\\^\\^)"
			},
			{
			"name": "keyword.operator.arithmetic.ohl",
			"match": "(\\+|-|\\*|/|%)"
			},
			{
			"name": "keyword.operator.comparison.ohl",
			"match": "(==|!=|<=|>=|<|>)"
			},
			{
			"name": "keyword.operator.logical.ohl",
			"match": "(\\b(and|or|xor)\\b|&&|\\|\\||\\^\\^|!)"
			},
			{
			"name": "keyword.operator.assignment.ohl",
			"match": "(=|:=|\\+=|-=|\\*=|/=|%=|\\^=|\\^/=)"
			}
		]
		},

    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ohl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}
